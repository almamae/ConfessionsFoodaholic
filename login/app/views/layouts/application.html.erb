<!DOCTYPE html>
<html>
<head>
  <title>Confessions of a Foodaholic</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery"%>
  <%= javascript_include_tag "bootstrap-dropdown"%>
  <%= stylesheet_link_tag "style" %>
   <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag "jquery-ui"%>
  <link href="js-image-slider.css" rel="stylesheet" type="text/css" />
  <script src ="jquery.js" type="text/javascript"></script>
  <script src="js-image-slider.js" type="text/javascript"></script>
  
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css" />
  <%= javascript_include_tag "accordion" %>
  <%= javascript_include_tag "pagination" %>
  <%= csrf_meta_tags %>
</head>
<body>
     
      <!-- Static navbar -->
      <div class="navbar ">
          
        <div class="navbar-inner">
           
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
          <a class="brand" href="/"><%= image_tag"logo2.jpg"%></a>
            <div class="nav-collapse collapse">
              <ul class="nav">
                <li><%= form_tag do %>
              <fieldset class="formsign-in"><div class="input-block-level"><%= text_field_tag :name, params[:name] %><a href="#"> <%= image_tag "searchicon.gif"%></a></div></fieldset>
          <% end %>
          </li>
                <li><a href="/">Home</a></li>
                <li><%= link_to "About", about_path %></li>
                <li><a href="#">Contact</a></li>
              </ul>
              <ul class="nav pull-right">
               
                  <% if(current_user) %>
                   <li><a href="#">Hi,<%= current_user.email %></a> </li> 
                   <li> <%= link_to "Logout", logout_path, method: :delete %></li>
                  <% else %>
                                    <li>                  <%= link_to "Login", login_path %> 
                </li>
                <li>
                    <%= link_to "Sign-up", sign_up_path %>
                </li>
                  <% end %>
              </ul>

            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>  
        <div class="flash">
        <% flash.each do |key, value| %>
          <p><%= value %></p>
         <% end %>
         </div>

     <div id="slider-holder" class="clearfix">
        
      <%= yield %>
      <%= render :partial => "pages/sidebar" %>
    </div>
     
  </body>

</html>
