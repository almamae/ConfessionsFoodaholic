<br/>
<div class="span10">
	<div class="dropdown">
  <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= image_tag "cogwheel"%></a>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
    <%= link_to edit_post_path(:id => @post.id)%>
  </ul>
</div>
	<div class="post"><p><span class="title"><%= @post.title %></span><span class="admin_action"><%= adminapprove(@post)%></span><br/></p><%= image_tag url_for(:controller => 'posts',:action => 'show_image', :id => @post.id), :size => "50x60" %>
		<p> <%= @post.content %>
		</p>
		<em>Posted on <%= @post.created_at.to_date.to_s(:default) %></em>	
		</div>
	<div  class="meta">
		<div class="user"><%= 	link_to User.find(@post.user_id).email, user_path(:id => @post.user_id) %></div>
		<div class="categories"><em><%= link_to @post.category, showcategory_path(:controller=>'posts',:category => @post.category) %></em></div>
		<div class="comments"><a href="#viewcomment"><%= @post.comments.count()%> comments </a></div>
		<%if current_user%>
		<div class="comments">
			<%= toggle_like_button(@post, current_user)%> 
		<%end%>
			<%= like_counter(@post)%></div>

	</div>

	<div id="accordion">
		<div>
			<ul >
				<%= render :partial => 'comments/comment', :collection => @post.comments %>
			</ul>
		</div>
	</div>
	<% if current_user%>
		<div>
        	<%= form_for [@parent, Comment.new] do |f| %>
			   <%= f.hidden_field :user_id, :value => current_user.id %>
			  <p>
				 <%= f.text_area :content, :cols => "10", :rows => "5", :class => "textarea"%>
			  </p>
			  
			  <p><%= f.submit 'Comment' %></p>
			<% end %>
		</div>
		<%end%>
					
	</div>
		<!-- ENDS comments list -->
	      
