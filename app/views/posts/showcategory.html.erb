<div class="container-fluid" id="header">
	<div class="row" > 
		<div class="span3" id="categ"><%= link_to "Pastries", showcategory_path(:category => 'Pastry')%></div>		
		<div class="span3" id="categ"><%= link_to "Desserts", showcategory_path(:category => 'Dessert')%></div>	
		<div class="span3" id="categ"><%= link_to "Dishes", showcategory_path(:category => 'Dish')%></div>		
		<div class="span3" id="categ"><%= link_to "Appetizers", showcategory_path(:category => 'Appetizer')%></div>
	</div>
</div>
<br/>
<br/>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span3" >	
			<h4>Featured Posts</h4>
			<% @featured.each do |f|%>
				<div id="featured"><%= link_to f.title, f %><br/>
					<%= truncate f.content, :length => 100%>
				</div>
			<% end %>
		</div>
		<div class="span9">
			<div class="row">
			<div class="span 9">
				<%if current_user%>
					<a href="#newpost" id="linknew" class="badge badge-info">ADD NEW POST</a><div id = "formnew"> <%= render 'form'%></div>
				<% end %>
			</div>
			</div>
			<% if @posts.blank?%>
				<div class="alert alert-info">
					<p>No available post for this category.</p>
				</div>
			<% else %>
				<%= render 'posts' %>
			<% end %>
		</div>
	</div>
</div>