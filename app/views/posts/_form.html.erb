
  <%= form_for(@post, :html => { :multipart => true }) do |f| %>
    <fieldset class="post">

    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <div class="form-container">
    <div class="title">
      <%= f.text_field :title, :size=>50, :placeholder => 'Title' %>
    </div> &nbsp;&nbsp;&nbsp;
    <div class="recipe">
      <% if Recipe.exists? %>
      <%= f.collection_select :recipe_id, Recipe.all, :id, :name , :size=>60, :placeholder =>'Recipe' %>
      <% end %>
      <%= link_to "Add new recipe", new_recipe_path%>
    </div>
    <div class="category">
      <%= f.select(:category, Post::CATEGORIES, :placeholder => 'Category') %>
      </div>
    <div >
      <%= f.text_area :content, :cols => "20", :rows => "5", :class => "textarea", :placeholder => 'Post instructions' %>
    </div>
    <div>
      <%= f.text_field :caption,:placeholder => 'Caption' %><br/>
      Upload video/picture: <%= f.file_field("uploaded_picture") %>
    </div>  
    <div >
      <%= f.submit %>
    </div>
  </div>
   </fieldset>

  <% end %>
 