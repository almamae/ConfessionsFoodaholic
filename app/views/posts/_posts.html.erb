
	<% @posts.each do |post|%>
	<div class="span10">
	<div class="post">
	<p><span class="title"><%= link_to post.title, post %></span> <div class="btn-group" id="optbutton">
  <button class="btn btn-mini">Options</button>
  <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <!-- dropdown menu links -->
    <li><%= adminapprove(post)%></li>
    <li><% if current_user && current_user.id == post.user_id %>
		 <%= link_to "Edit",edit_post_path(post)%>
		 <%end%>
	</li>
    <li><%= deletepost(post)%></li>
  </ul>
</div><br/></p><%= image_tag url_for(:controller => 'posts',:action => 'show_image', :id => post.id) %>
		<p> <%= truncate post.content, :length => 160%>
			<% if post.content.length > 160 %>
			<a href="posts/<%= post.id%>">read more &#8594;</a>
			<% end %>
		</p>	
	<em>Posted on <%= post.created_at.to_date.to_s(:default) %></em>
	</div>
	<div  class="meta">
		<div class="user"><%= 	link_to User.find(post.user_id).email, user_path(:id => post.user_id) %></div>
		<div class="categories"><em><%= link_to post.category, showcategory_path(:controller=>'posts',:category => post.category) %></em></div>
		<div class="comments"><a href="posts/<%= post.id %>"><%= post.comments.count()%> comments </a></div>
		<div class="likes">
			<%= toggle_like_button(post, current_user)%> 
			<%= like_counter(post)%></div>
		<div class="report">
			<%= report_user(post)%> 
		</div>

	</div>
	</div>
	<% end %>
	<div>
	<%= will_paginate @posts%></div>